<h1>Friendly URL requested by <%= @furl_request.organisation_title %></h1>

<dl>
  <dt>By:</dt>
  <dd><%= @furl_request.organisation_title %></dd>

  <dt>Requested at:</dt>
  <dd><%= @furl_request.created_at.to_s(:govuk_date) %></dd>

  <dt>From:</dt>
  <dd><%= @furl_request.from %></dd>

  <dt>To:</dt>
  <dd><%= link_to @furl_request.to, govuk_url_for(@furl_request.to) %></dd>

  <dt>Reason:</dt>
  <dd><%= @furl_request.reason %></dd>

  <dt>Contact email:</dt>
  <dd><%= @furl_request.contact_email %></dd>
</dl>

<%= button_to "Accept and create redirect", accept_furl_request_path(@furl_request), method: :post, class: "btn btn-success" %>
<%= link_to "Back", furl_requests_path, class: "btn btn-default" %>
