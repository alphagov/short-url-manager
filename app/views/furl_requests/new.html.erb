<h1>Request a friendly url</h1>

<%= form_for @furl_request, url: { action: :create } do |f| %>`
  <%= render_errors_for @furl_request, leading_message: "Your request for a friendly URL could not be made for the following reasons:" %>
  <fieldset>
    <div class="form-group">
      <%= f.label :from %>
      <%= f.text_field :from, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :to %>
      <%= f.text_field :to, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :organisation_slug, "Organisation" %>
      <%= f.select :organisation_slug, options_for_select(organisations.map {|org| [org.title, org.slug] }, @furl_request.organisation_slug), {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :reason %>
      <%= f.text_area :reason, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :contact_email %>
      <%= f.text_field :contact_email, class: 'form-control' %>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.submit "Make this request", class: 'btn btn-success' %>
    </div>
  </fieldset>
<%- end -%>
