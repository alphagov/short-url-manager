<%= render "govuk_publishing_components/components/summary_list", {
  items: [
    {
      field: "Organisation",
      value: short_url_request.organisation_title
    },
    {
      field: "Requested at",
      value: short_url_request.created_at.to_s(:govuk_date)
    },
    {
      field: ("URL redirect or short URL" if show_short_url),
      value: (short_url_request.from_path if show_short_url)
    },
    {
      field: "Target URL",
      value: link_to(short_url_request.to_path, govuk_url_for(short_url_request.to_path))
    },
    {
      field: "Override existing?",
      value: short_url_request.override_existing? ? "Yes" : "No"
    },
    {
      field: "Route type",
      value: short_url_request.route_type
    },
    {
      field: "Segments mode",
      value: short_url_request.segments_mode
    },
    {
      field: "Reason",
      value: short_url_request.reason
    },
    {
      field: "Contact email",
      value: short_url_request.contact_email
    },
    {
      field: "Status",
      value: short_url_request.state.titleize
    },
  ]
} %>
